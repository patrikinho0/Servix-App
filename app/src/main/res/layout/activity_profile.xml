<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/customBottomNav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/profile_picture_imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:contentDescription="@string/profile_picture"
                android:scaleType="centerCrop"
                android:src="@drawable/person" />

            <TextView
                android:id="@+id/profile_greetings_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="@string/hey_pat"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/settings_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/settings"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/account_info_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/profile_button_style"
                android:drawableEnd="@drawable/right_arrow_icon"
                android:drawablePadding="8dp"
                android:gravity="start|center_vertical"
                android:text="@string/account_information"
                android:textColor="@android:color/black" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/application_settings_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/profile_button_style"
                android:drawableEnd="@drawable/right_arrow_icon"
                android:drawablePadding="8dp"
                android:gravity="start|center_vertical"
                android:text="@string/application_settings"
                android:textColor="@android:color/black" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/notifications_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/profile_button_style"
                android:drawableEnd="@drawable/right_arrow_icon"
                android:drawablePadding="8dp"
                android:gravity="start|center_vertical"
                android:text="@string/notifications"
                android:textColor="@android:color/black" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/liked_services_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/profile_button_style"
                android:drawableEnd="@drawable/right_arrow_icon"
                android:drawablePadding="8dp"
                android:gravity="start|center_vertical"
                android:text="@string/liked_service_requests"
                android:textColor="@android:color/black" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/become_expert_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/profile_button_style"
                android:drawableEnd="@drawable/right_arrow_icon"
                android:drawablePadding="8dp"
                android:gravity="start|center_vertical"
                android:text="@string/become_an_expert"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/help_contact_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/help_amp_contact"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/contact_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/profile_button_style"
                android:drawableEnd="@drawable/right_arrow_icon"
                android:drawablePadding="8dp"
                android:gravity="start|center_vertical"
                android:text="@string/contact"
                android:textColor="@android:color/black" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/faq_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/profile_button_style"
                android:drawableEnd="@drawable/right_arrow_icon"
                android:drawablePadding="8dp"
                android:gravity="start|center_vertical"
                android:text="@string/faq"
                android:textColor="@android:color/black" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/regulations_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/profile_button_style"
                android:drawableEnd="@drawable/right_arrow_icon"
                android:drawablePadding="8dp"
                android:gravity="start|center_vertical"
                android:text="@string/regulations"
                android:textColor="@android:color/black" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/privacy_policy_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/profile_button_style"
                android:drawableEnd="@drawable/right_arrow_icon"
                android:drawablePadding="8dp"
                android:gravity="start|center_vertical"
                android:text="@string/privacy_policy"
                android:textColor="@android:color/black" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cookie_files_settings_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/profile_button_style"
                android:drawableEnd="@drawable/right_arrow_icon"
                android:drawablePadding="8dp"
                android:gravity="start|center_vertical"
                android:text="@string/cookie_files_settings"
                android:textColor="@android:color/black" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/rate_servix_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/profile_button_style"
                android:drawableEnd="@drawable/right_arrow_icon"
                android:drawablePadding="8dp"
                android:gravity="start|center_vertical"
                android:text="@string/rate_servix_on_app_store"
                android:textColor="@android:color/black" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/about_app_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/profile_button_style"
                android:drawableEnd="@drawable/right_arrow_icon"
                android:drawablePadding="8dp"
                android:gravity="start|center_vertical"
                android:text="@string/about_app"
                android:textColor="@android:color/black" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/licenses_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/profile_button_style"
                android:drawableEnd="@drawable/right_arrow_icon"
                android:drawablePadding="8dp"
                android:gravity="start|center_vertical"
                android:text="@string/licenses"
                android:textColor="@android:color/black" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/logout_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:background="@drawable/button_logout_background"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:text="@string/log_out"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/customBottomNav" />

    <LinearLayout
        android:id="@+id/customBottomNav"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="5"
        android:background="@color/white"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/navHome_ImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/home"
                android:src="@drawable/home" />

            <TextView
                android:id="@+id/navHome_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navServices"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/navServices_ImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/services"
                android:src="@drawable/services" />

            <TextView
                android:id="@+id/navServices_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/services"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navExperts"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/navExperts_ImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/experts"
                android:src="@drawable/experts" />

            <TextView
                android:id="@+id/navExperts_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/experts"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navNotifications"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/navNotifications_ImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/notifications"
                android:src="@drawable/notifications" />

            <TextView
                android:id="@+id/navNotify_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notifications"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/navProfile_ImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/profile"
                android:src="@drawable/person" />
            <TextView
                android:id="@+id/navProfile_textView"
                android:text="@string/profile"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
