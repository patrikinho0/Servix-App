<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/rounded_corner_background"
    android:elevation="8dp" android:layout_gravity="center"> <ProgressBar
    android:id="@+id/progressBar"
    android:layout_width="60dp" android:layout_height="60dp"
    android:indeterminate="true"
    android:layout_gravity="center"
    android:layout_marginBottom="16dp" android:indeterminateTint="?attr/colorPrimary" /> <TextView
    android:id="@+id/loadingTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Please wait..." android:textSize="18sp"
    android:fontFamily="sans-serif-medium"
    android:gravity="center"
    android:textStyle="bold" />

    <TextView
        android:id="@+id/subMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Processing your request..."
        android:textSize="14sp"
        android:gravity="center"
        android:visibility="gone" /> <ImageView
        android:id="@+id/appLogoImageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/servix_logo"
        android:visibility="gone" /> </LinearLayout>