<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="black">#FF000000</color>
    <color name="white">#FFFFFFFF</color>
    <color name="navigation_item_text">#000000</color>
    <color name="navigation_item_icon">#000000</color>
    <color name="servix_background">#E2E5E0</color>
    <color name="red">#FF0000</color>

    <style name="BottomNavigationViewStyle" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@color/navigation_item_icon</item>
        <item name="itemTextColor">@color/navigation_item_text</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="BottomNavTextSelected">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavTextUnselected">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>